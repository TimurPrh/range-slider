        - let a = 5000, b = 10000;
        .range-slider
            label.range-slider__result(for='a')
            .range-slider__wrapper
                .range-slider__range-bg
                .range-slider__thumb
                input#a.range-slider__input(type='range' min=min value=a max=max step=100)
